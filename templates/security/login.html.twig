{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="h-100">
    <div class="container h-100">
        <div class="row justify-content-sm-center h-100">
            <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                <div class="text-center my-5">
                    <img src="{{ asset('img/logo.png') }}" alt="logo" width="100">
                </div>
                <div class="card bg-dark">
                    <div class="card-body p-5 text-center">
                        <h1 class="fs-4 card-title fw-bold mb-4 text-white">Connexion</h1>
                        <form method="POST" class="needs-validation" novalidate="" autocomplete="off">
                            <div class="mb-3">
                                <label class="mb-2 text-white" for="email">E-Mail</label>
                                <input id="email" type="email" class="form-control" name="email" value="" required autofocus>
                                <div class="invalid-feedback">
                                    L'E-mail n'est pas correct
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="mb-2 w-100">
                                    <label class="text-white" for="password">Mot de passe</label>
                                    <a href="forgot.html" class="float-end">
                                        Mot de passe oublié ?
                                    </a>
                                </div>
                                <div class="password-input-container">
                                    <input id="password" type="password" class="form-control password-input" name="password" required>
                                        <span class="toggle-password">
                                            <i class="fa-solid fa-eye text-white" id="eye-icon"></i>
                                        </span>
                                </div>
                                <div class="invalid-feedback">
                                    Le mot de passe est obligatoire
                                </div>
                            </div>

                            <div class="d-flex align-items-center">
                                <div class="form-check">
                                    <input type="checkbox" name="remember" id="remember" class="form-check-input">
                                    <label for="remember" class="form-check-label text-white">Se souvenir</label>
                                </div>
                                <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}">
                                <button type="submit" class="btn btn-primary ms-auto">
                                    Se connecter
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer py-3 border-0">
                        <div class="text-center">
                            Vous n'êtes pas inscrit? <a href="register.html" class="text-dark">Créer un compte</a>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-5 text-muted">
                    Copyright &copy; 2024 &mdash; Calculate
                </div>
            </div>
        </div>
    </div>
</section>

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/password-toggle.js') }}"></script>
{% endblock %}
{% endblock %}
