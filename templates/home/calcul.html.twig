{% extends 'base.html.twig' %}

{% block title %}Calcul{% endblock %}

{% block body %}
<h1>Ceci est une page de calcul</h1>

<div class="col-md-6">
    <form action="" method="post">
        <div class="form-group">
            <label for="number1">Nombre 1</label>
            <input type="text" class="form-control" id="number1" name="number1" required>
            
            <label for="number2">Nombre 2</label>
            <input type="text" class="form-control" id="number2" name="number2" required>

            <label for="operation">Opération</label>
            <select class="form-control" id="operation" name="operation" required>
                <option value="addition">Addition</option>
                <option value="soustraction">Soustraction</option>
                <option value="multiplication">Multiplication</option>
                <option value="division">Division</option>
            </select>

            <button type="submit" class="btn btn-primary">Calculer</button>

            {% if result is defined %}
                <p>Résultat : {{ result }}</p>
            {% endif %}
            </div>
    </form>
</div>
{% endblock %}
